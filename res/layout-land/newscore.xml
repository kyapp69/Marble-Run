<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/LinearLayout1"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView android:id="@+id/textView1" android:layout_width="0dp"
			android:gravity="center" android:layout_height="wrap_content"
			android:layout_marginLeft="0dp" android:layout_weight="1"
			android:text="@string/score_id" android:textSize="25dp" />
		<TextView android:id="@+id/textView2" android:layout_width="0dp"
			android:gravity="center" android:layout_height="wrap_content"
			android:layout_weight="1" android:text="@string/score_stage"
			android:textSize="15dp" />
		<TextView android:id="@+id/textView3" android:layout_width="0dp"
			android:gravity="center" android:layout_height="wrap_content"
			android:layout_weight="1" android:text="@string/score_name" android:textSize="23dp"/>
		<TextView android:id="@+id/textView4" android:layout_width="0dp"
			android:gravity="center" android:layout_height="wrap_content"
			android:layout_weight="1" android:text="@string/score_points" android:textSize="20dp"/>
	</LinearLayout>
	<ScrollView android:id="@+id/score_scrollview"
		android:layout_width="fill_parent" android:layout_height="0dip"
		android:layout_weight="2">
		<TableLayout android:id="@+id/entry1"
			android:layout_width="fill_parent" android:layout_height="0dp">
		</TableLayout>
	</ScrollView>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<Button android:id="@+id/score_delete1" android:layout_width="0dp"
			android:layout_height="wrap_content" android:layout_weight="1"
			android:text="@string/score_delete" />
		<Button android:id="@+id/score_back1" android:layout_width="0dp"
			android:layout_height="wrap_content" android:layout_weight="1"
			android:text="@string/score_back" />
	</LinearLayout>

</LinearLayout>