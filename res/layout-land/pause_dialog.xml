<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
	android:layout_height="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">
	<Button android:id="@+id/pause_resume" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_weight="1"
		android:text="@string/pause_resume" />
	<Button android:id="@+id/pause_restart" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_weight="1"
		android:text="@string/pause_restart" />
	<Button android:id="@+id/pause_settings" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_weight="1"
		android:text="@string/menuSettings" />
	<Button android:id="@+id/pause_back" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_weight="1"
		android:text="@string/pause_back" />
</LinearLayout>

