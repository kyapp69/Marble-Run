<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:layout_gravity="center_vertical" android:background="@drawable/bg">

	<TextView android:id="@+id/version" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_alignParentRight="true"
		android:layout_alignParentTop="true" android:layout_marginRight="50dp"
		android:layout_marginTop="30dp" android:textColor="#AA22AA"
		android:textStyle="italic" android:text="@string/version" />
	<LinearLayout android:layout_width="100dp"
		android:layout_height="160dp" android:layout_below="@+id/version"
		android:layout_marginRight="32dp" android:layout_marginTop="32dp"
		android:layout_toLeftOf="@+id/version" android:orientation="vertical">
		<Button android:id="@+id/playButton" android:layout_width="match_parent"
			android:layout_height="40dp" android:text="@string/menuPlay" />
		<Button android:id="@+id/scoreButton" android:layout_width="100dp"
			android:layout_height="40dp" android:layout_marginRight="42dp"
			android:text="@string/menuScore" />
		<Button android:id="@+id/settingsButton" android:layout_width="match_parent"
			android:layout_height="40dp" android:text="@string/menuSettings" />
		<Button android:id="@+id/quitButton" android:layout_width="match_parent"
			android:layout_height="40dp" android:text="@string/menuQuit" />
	</LinearLayout>

</RelativeLayout>